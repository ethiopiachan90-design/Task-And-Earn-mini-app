{
  "name": "task-and-earn",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:api": "turbo dev --filter=@task-and-earn/api",
    "dev:mini-app": "turbo dev --filter=@task-and-earn/mini-app",
    "dev:admin": "turbo dev --filter=@task-and-earn/admin",
    "db:migrate": "pnpm --filter @task-and-earn/api prisma migrate dev",
    "db:generate": "pnpm --filter @task-and-earn/api prisma generate",
    "db:push": "pnpm --filter @task-and-earn/api prisma db push",
    "db:studio": "pnpm --filter @task-and-earn/api prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.8.3"
  }
}
